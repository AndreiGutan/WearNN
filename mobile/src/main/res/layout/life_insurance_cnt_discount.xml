<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="16dp"
    android:layout_marginStart="20dp"
    android:layout_marginTop="280dp"
    android:layout_marginBottom="300dp">

    <TextView
        android:id="@+id/insuranceInfoTitle"
        android:textStyle="bold"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:includeFontPadding="false"
        android:text="@string/insurance_payment_info"
        android:textColor="@color/white"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/background_activity_tabs"
        android:padding="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <ImageView
            android:id="@+id/insuranceSymbol"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/handmoneybag2_24px"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />
<!-- Labels-->
        <TextView
            android:id="@+id/paymentLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/monthly_payment"
            android:layout_marginStart="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/activityDiscountLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/activity_discount"
            android:layout_marginStart="180dp"
            app:layout_constraintTop_toBottomOf="@id/paymentLabel"
            app:layout_constraintStart_toStartOf="parent"
            />
       <View
           android:id="@+id/delimiter"
           android:layout_width="match_parent"
           android:layout_height="1dp"
           android:background="@android:color/white"
           android:layout_marginStart="180dp"
           app:layout_constraintTop_toBottomOf="@id/activityDiscountLabel"
           app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/remainingPaymentLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            android:text="@string/activity_discount"
            android:layout_marginStart="180dp"
            app:layout_constraintTop_toBottomOf="@id/delimiter"
            app:layout_constraintStart_toStartOf="parent"
            />
        <!-- values -->
        <TextView
            android:id="@+id/paymentValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/_12345"
            android:layout_marginStart="300dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/activityDiscountValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/_12"
            android:layout_marginStart="300dp"
            app:layout_constraintTop_toBottomOf="@id/paymentValue"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/remainingPaymentValue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:text="@string/_1000"
            android:textStyle="bold"
            android:layout_marginStart="300dp"
            app:layout_constraintTop_toBottomOf="@id/delimiter"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>



</androidx.constraintlayout.widget.ConstraintLayout>